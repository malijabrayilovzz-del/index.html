<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Interactive Question</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    #questionBox { margin-top: 20px; font-size: 20px; font-weight: bold; }
    .btn { padding: 10px 20px; margin: 10px; font-size: 18px; cursor: pointer; }
    #celebrate {
      font-size: 40px;
      opacity: 0;
      transition: opacity 0.5s;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <a href="#" id="startLink">TÄ±kla ğŸ€</a>

  <div id="questionBox"></div>
  <div id="buttons"></div>
  <div id="celebrate"></div>

  <script>
    const questionBox = document.getElementById("questionBox");
    const buttons = document.getElementById("buttons");
    const celebrate = document.getElementById("celebrate");

    document.getElementById("startLink").onclick = function(event) {
      event.preventDefault(); // sayfa yenilenmesini engeller
      showFirstQuestion();
    };

    function showFirstQuestion() {
      questionBox.textContent = "Hi Lale, I am Uykucu and Mali wanted to ask this from you. Do you wanna come Thursday to the course?";
      buttons.innerHTML = "";
      addButton("Pleaseee", showNoAnswer);
    }

    function showNoAnswer() {
      questionBox.textContent = "Oh no ğŸ˜¢ Maybe next time!";
      buttons.innerHTML = "";
      // Ä°stersen baÅŸka aksiyon ekleyebilirsin
    }

    function showSecondQuestion() {
      questionBox.textContent = "Great! Choose your answer:";
      buttons.innerHTML = "";
      addButton("Okayy, I am coming", celebrateAction);
      addButton("Okayy, I will come", celebrateAction);
    }

    function celebrateAction() {
      buttons.innerHTML = "";
      questionBox.textContent = "";
      celebrate.style.opacity = 1;
      celebrate.textContent = "Yeayyyyy! Uykucu is happy! ğŸ‰ğŸ‰ğŸ‰";
    }

    function addButton(text, action) {
      const btn = document.createElement("button");
      btn.textContent = text;
      btn.className = "btn";
      btn.onclick = action;
      buttons.appendChild(btn);
    }

    // EÄŸer â€œPleaseeeâ€ butonuna basÄ±nca ikinci soru da Ã§Ä±kacak ÅŸekilde yapmak istersen:
    document.getElementById("startLink").onclick = function(event) {
      event.preventDefault();
      showSecondQuestion(); // direkt ikinci soru ile baÅŸlat
    };
  </script>
</body>
</html>
